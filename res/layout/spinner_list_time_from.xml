<RelativeLayout android:id="@+id/rlSpinnerListTimeFromMain" 
xmlns:android="http://schemas.android.com/apk/res/android" 
android:layout_height="wrap_content" android:layout_width="wrap_content">

<TextView android:id="@+id/tvSpinnerEditTimeFrom" 
android:layout_width="wrap_content" 
android:background="@drawable/dropdown_small_129x40" 
android:gravity="center" 
android:paddingRight="35dip" 
android:clickable="true" 
android:layout_height="wrap_content" 
android:textSize="@android:dimen/HP.Type.18" 
android:textStyle="bold" 
android:textColor="@android:color/HP.Color.Gray1"/>

<ViewFlipper 
android:id="@+id/flipperSpinnerListTimeFrom"
android:layout_below="@+id/tvSpinnerEditTimeFrom" 
android:layout_height="wrap_content" 
android:layout_width="wrap_content">

<TextView 
android:id="@+id/tvtmp" android:layout_height="wrap_content" 
android:layout_width="wrap_content" android:visibility="gone"/>

<ListView 
android:id="@+id/lvSpinnerMenuTimeFrom" 
android:isScrollContainer="true" 
android:smoothScrollbar="true" 
android:choiceMode="singleChoice" 
android:scrollbarThumbVertical="@drawable/scrollbar_handle_vertical_blue" 
android:scrollbarTrackVertical="@drawable/scrolling_bar_v" 
android:scrollbars="vertical" 
android:longClickable="false" 
android:paddingLeft="5dip" 
android:paddingRight="5dip" 
android:layout_width="129dip" 
android:layout_height="190dip"/>

</ViewFlipper>
</RelativeLayout>