<RelativeLayout 
android:id="@+id/rlLoginMain" 
xmlns:android="http://schemas.android.com/apk/res/android" 
android:layout_height="fill_parent" 
android:layout_width="fill_parent" 
android:gravity="center">


<RelativeLayout 
android:id="@+id/rlLoginBackground" 
android:layout_height="fill_parent" 
android:layout_width="fill_parent">

<View android:visibility="invisible" 
android:layout_centerVertical="true" 
android:layout_height="1dip" 
android:layout_width="fill_parent" 
android:id="@+id/anchorLoginCenter">
</View>

<View android:visibility="invisible" 
android:layout_height="1dip" 
android:layout_width="fill_parent" 
android:id="@+id/anchorLoginCenterUp" 
android:layout_above="@+id/anchorLoginCenter" 
android:layout_marginBottom="20dip">
</View>

<RelativeLayout android:layout_width="fill_parent" 
android:layout_alignTop="@+id/rlLoginBackground" 
android:id="@+id/rlLoginHeader" android:background="@android:drawable/hpheader" android:layout_height="wrap_content">

<TextView android:layout_width="wrap_content" 
android:id="@+id/tvLoginTitle" 
android:text="@string/calendar" 
android:textSize="@android:dimen/HP.Type.18" 
android:textColor="@android:color/HP.Color.Gray1" 
android:layout_height="wrap_content" 
android:layout_centerVertical="true" 
android:paddingLeft="20dp" 
android:paddingBottom="5dp"/>

</RelativeLayout>

<RelativeLayout android:layout_width="fill_parent" 
android:id="@+id/rlLoginCenter" 
android:layout_alignBottom="@+id/anchorLoginCenterUp" 
android:background="@android:color/black" 
android:layout_height="30dp" 
android:gravity="center_vertical">

<TextView android:layout_width="wrap_content" 
android:id="@+id/tvLoginCenterText"
android:text="@string/ExistingMember" 
android:layout_height="fill_parent" 
android:paddingLeft="20dp" 
android:gravity="center_vertical" android:textSize="@android:dimen/HP.Type.14" android:textColor="@android:color/HP.Color.Gray2" android:textColorHighlight="@android:color/HP.Color.Gray2"/>


</RelativeLayout>

<ImageView 
android:layout_below="@+id/rlLoginCenter" 
android:id="@+id/ivLine01" 
android:layout_width="fill_parent" 
android:layout_height="1dp" 
android:background="@android:color/HP.Color.Gray5"/>

<RelativeLayout android:layout_centerHorizontal="true" 
android:layout_width="fill_parent" 
android:layout_height="100dip" 
android:id="@+id/rlLoginContent01" 
android:layout_below="@+id/rlLoginHeader" 
android:layout_above="@+id/rlLoginCenter" 
android:background="@android:color/HP.Color.Gray6">

<TextView android:layout_height="wrap_content" 
android:layout_width="fill_parent" 
android:layout_alignParentTop="true" 
android:id="@+id/tvLoginContent01Header" 
android:text="@string/WhatisGoogleCld" 
android:textStyle="bold" 
android:textSize="@android:dimen/HP.Type.18" 
android:paddingLeft="20dp" android:textColor="@android:color/white" android:textColorHighlight="@android:color/white"/>


<TextView android:layout_height="wrap_content" 
android:layout_width="fill_parent" 
android:id="@+id/tvLoginContent01Text" 
android:layout_below="@+id/tvLoginContent01Header" 
android:text="@string/WhatisGoogleCldText" 
android:paddingLeft="20dp" 
android:paddingRight="20dp" 
android:paddingTop="10dp" 
android:textColor="@android:color/HP.Color.Gray2" android:textSize="@android:dimen/HP.Type.18"/>


</RelativeLayout>


<RelativeLayout 
android:id="@+id/rlLoginPrimary" 
android:layout_width="fill_parent" 
android:background="@android:color/HP.Color.Gray6" 
android:layout_below="@+id/ivLine01" 
android:layout_height="wrap_content" 
android:paddingBottom="10dp">

<View android:id="@+id/anchorLoginPrimaryCenter" 
android:layout_width="1dip" 
android:layout_centerHorizontal="true" 
android:layout_height="100dip"></View>

<View android:id="@+id/anchorLoginPrimaryLeft" 
android:layout_width="1dip" 
android:layout_height="100dip" 
android:layout_alignParentLeft="true" 
android:layout_marginLeft="100dip"/>

<TextView 
android:layout_width="wrap_content" 
android:layout_height="wrap_content" 
android:id="@+id/tvLoginAccount" 
android:textStyle="bold" 
android:text="@string/Email" 
android:textSize="@android:dimen/HP.Type.18" 
android:paddingLeft="20dp" 
android:paddingTop="20dp" android:textColor="@android:color/white" android:textColorHighlight="@android:color/white"/>

<EditText
style="@android:style/HP.EditText"
android:id="@+id/etLoginAccount"
android:inputType="textEmailAddress"
android:imeOptions="actionNext|flagNoExtractUi"
android:layout_height="wrap_content" 
android:layout_marginLeft="120dip" 
android:width="310dp" 
android:paddingLeft="10dip"
android:layout_width="320dp" 
android:hint="@string/EnterEmail"
android:layout_marginTop="10dip" android:maxLines="1" android:textSize="@android:dimen/HP.Type.18" android:textColor="@android:color/HP.Color.Gray6" android:textColorHighlight="@android:color/HP.Color.Gray6"/>
                
<TextView 
android:id="@+id/tvLoginPassword" 
android:layout_width="wrap_content" 
android:layout_height="wrap_content" 
android:textStyle="bold" 
android:text="@string/Password" 
android:layout_below="@+id/etLoginAccount" 
android:paddingTop="20dip" 
android:textSize="@android:dimen/HP.Type.18" 
android:paddingLeft="20dp" android:textColor="@android:color/white" android:textColorHighlight="@android:color/white"/>

<EditText
style="@android:style/HP.EditText"
android:id="@+id/etLoginPassword"
android:imeOptions="actionDone|flagNoExtractUi"
android:layout_height="wrap_content" 
android:layout_marginLeft="120dip" 
android:width="310dp" 
android:paddingLeft="10dip"
android:layout_width="320dp" 
android:hint="@string/EnterPassword"
android:layout_below="@+id/etLoginAccount" 
android:inputType="textVisiblePassword"
android:layout_marginTop="10dip" android:textSize="@android:dimen/HP.Type.18" android:maxLines="1" android:textColor="@android:color/HP.Color.Gray6" android:textColorHighlight="@android:color/HP.Color.Gray6"/>

<ImageView android:id="@+id/ivLoginPwdChkBox" 
android:layout_width="wrap_content" 
android:layout_height="wrap_content" 
android:src="@drawable/checkbox" 
android:layout_below="@+id/etLoginAccount" 
android:layout_alignLeft="@+id/anchorLoginPrimaryCenter" 
android:layout_marginLeft="50dip" 
android:layout_marginTop="20dip"/>

<TextView android:id="@+id/tvLoginSavePwd" 
android:layout_width="wrap_content" 
android:text="@string/SavePassword" 
android:layout_toRightOf="@+id/ivLoginPwdChkBox" 
android:textSize="@android:dimen/HP.Type.14" 
android:textColor="@android:color/HP.Color.Gray1" 
android:layout_alignTop="@+id/ivLoginPwdChkBox" 
android:layout_height="30dp" 
android:gravity="center_vertical" 
android:paddingLeft="10dp" android:textColorHighlight="@android:color/HP.Color.Gray1"/>


<Button android:textStyle="bold" 
android:text="@string/ok" 
android:id="@+id/btnLoginOK" 
android:gravity="center" 
android:layout_alignParentRight="true" 
android:layout_marginRight="20dip" 
android:textSize="@android:dimen/HP.Type.18" 
android:textColor="@android:color/HP.Color.Gray1" 
style="@android:style/HP.Button.Action" 
android:layout_alignTop="@+id/etLoginPassword" 
android:layout_height="wrap_content" 
android:layout_width="wrap_content"/>
</RelativeLayout>

<RelativeLayout android:layout_width="fill_parent" 
android:id="@+id/rlLoginFooter" 
android:layout_below="@+id/rlLoginPrimary" 
android:background="@android:color/black" 
android:layout_height="30dp">

<TextView android:layout_width="wrap_content" 
android:id="@+id/tvLoginCenterText" 
android:text="@string/NewMember" 
android:layout_height="fill_parent" 
android:paddingLeft="20dp" 
android:gravity="center_vertical" android:textSize="@android:dimen/HP.Type.14" android:textColor="@android:color/HP.Color.Gray2" android:textColorHighlight="@android:color/HP.Color.Gray2">
</TextView>

</RelativeLayout>
<ImageView 
android:id="@+id/ivLine02" 
android:layout_below="@+id/rlLoginFooter"
android:layout_width="fill_parent" 
android:layout_height="1dp" 
android:background="@android:color/HP.Color.Gray5"/>

<RelativeLayout android:layout_below="@+id/ivLine02" 
android:layout_width="fill_parent" 
android:id="@+id/rlLoginFooterContent" 
android:background="@android:color/HP.Color.Gray6" 
android:layout_height="fill_parent">

<TextView android:layout_width="wrap_content" 
android:layout_height="wrap_content" 
android:id="@+id/tvLoginFooterText01" 
android:text="@string/PleaseVisit" 
android:paddingLeft="20dp" 
android:paddingTop="10dp" 
android:textColor="@android:color/HP.Color.Gray2" android:textSize="@android:dimen/HP.Type.18" android:textColorHighlight="@android:color/HP.Color.Gray2">
</TextView>

<TextView android:layout_width="wrap_content" 
android:layout_height="wrap_content" 
android:id="@+id/tvLoginFooterText02" 
android:layout_toRightOf="@+id/tvLoginFooterText01" 
android:text="@string/httpGoogle" 
android:textStyle="bold" 
android:layout_marginLeft="5dip" 
android:paddingTop="10dp" 
android:textColor="@android:color/white" android:textSize="@android:dimen/HP.Type.18" android:textColorHighlight="@android:color/white">
</TextView>

<TextView android:layout_width="wrap_content" 
android:layout_height="wrap_content" 
android:id="@+id/tvLoginFooterText03" 
android:layout_below="@+id/tvLoginFooterText01" 
android:text="@string/CreateGoogle" 
android:paddingLeft="20dp" android:textColor="@android:color/HP.Color.Gray2" android:textColorHighlight="@android:color/HP.Color.Gray2" android:textSize="@android:dimen/HP.Type.18">
</TextView>



</RelativeLayout>


</RelativeLayout>

</RelativeLayout>
